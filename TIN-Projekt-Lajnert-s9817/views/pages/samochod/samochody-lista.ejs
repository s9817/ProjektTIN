<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Lista samochodów</h2>
            <table class="table-list">
                <thead>
                    <tr>
                        <th>Numer rejestracyjny</th>
                        <th>Marka</th>
                    
                        <th>Model</th>
                        <th>Akcja</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% for (let samochod of samochody) { %>
        <tr>
            <td><%= samochod.numerRej %></td>
            <td><%= samochod.marka %></td>
            <td><%= samochod.model %></td>
            <td>
            <ul class="list-actions">
                <li>
                    <a href="/samochod/details/<%= samochod._id %>" class="list-actions-button-details">Szczegóły</a>
                </li>
                <li>
                    <a href="/samochod/edit/<%= samochod._id %>" class="list-actions-button-edit">Edytuj</a>
                </li>
                <li>
                    <a href="/samochod/delete/<%= samochod._id %>" class="list-actions-button-delete">Usuń</a>
                </li>
                
            </ul>
        </td>
    </tr>
    <% } %>   
</tbody>
        </table>
        
        <p><a href="/samochod/add" class="button-add">Dodaj nowy samochód</a></p>
        
    </main>
<%- include('../../fragments/footer.ejs') %>